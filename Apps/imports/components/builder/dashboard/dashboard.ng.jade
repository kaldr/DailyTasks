md-content.dashboardContent.app(flex layout-fill)
  md-toolbar(md-colors="{background:'indigo-900'}" align='center')
    h4
      md-icon developer_board
      | APP
  md-toolbar.searchToolbar(md-colors="{background:'grey-100'}")  
    md-input-container.md-block(align='left')
      label 要检索的APP名称
      md-icon search
      input(ng-model='searchapp' type='text')
  md-content(flex align='left' layout-fill)
    md-list(flex)
      md-subheader(align='center' md-colors="{background:'indigo-50'}") 共{{builderDashboard.apps.length}}个APP
      md-list-item.md-2-line(ng-repeat='app in builderDashboard.apps|filter:{name:searchapp}' ng-click='null')
        md-icon highlight
        .listItem.md-list-item-text
          h4 {{app.name}}
          p {{app.filePath}}
        md-divider
    
md-content.dashboardContent.api(flex layout-fill)
  md-toolbar(md-colors="{background:'indigo-800'}" align='center')
    h4
      md-icon settings_input_component
      | API
  md-toolbar.searchToolbar(md-colors="{background:'indigo-50'}") 
    md-input-container.md-block(align='left')
      label 要检索的API内容
      md-icon search
      input(ng-model='search' type='text')
  md-content(flex align='left'  layout-fill)
    md-list(flex ng-repeat='(apipath,apis) in  builderDashboard.apiFolders')
      md-subheader(md-colors="{background:'indigo-100'}" layout='row' layout-align="center center") 
        span {{apipath}} 
      md-list-item.md-2-line(ng-repeat='api in apis | filter:{filePath:search}'  ng-click='null' md-colors="{background:'indigo-50'}")
        md-icon tune
        .listItem.md-list-item-text
          h4 {{api.name}}
          p {{api.filePath}}
        md-divider
      
